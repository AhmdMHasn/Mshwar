<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_slider"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="12dp"
    app:cardPreventCornerOverlap="false"
    android:gravity="center"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingRight="60dp"
        android:paddingLeft="60dp"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:background="@drawable/background_rounded_transparent"
        android:elevation="2dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_user_slider"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_centerInParent="true"
            app:civ_border_color="@color/colorOffwhite"
            app:civ_border_width="3dp"
            />

        <TextView
            android:id="@+id/txt_name_slider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:text="@string/app_name"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/btn_linkedin"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_linkedin"
                android:layout_margin="5dp"
                android:padding="0dp"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="LinkedIn"/>

            <ImageButton
                android:id="@+id/btn_github"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_github"
                android:layout_margin="5dp"
                android:padding="0dp"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="fitCenter"
                android:contentDescription="GitHub"
                android:adjustViewBounds="true"/>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>